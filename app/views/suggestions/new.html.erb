<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3"> <%= titleize params[:category] %></h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <% @suggestion.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
      <%= form_for @suggestion do |f| %>
        <div class="form-group">
          <%= f.label :content, hidden: true %>
          <%= f.text_area :content, class: "form-control", placeholder: "Your suggestion here" %>
        </div>
        <div class="form-group">
          <%= f.label :author, hidden: true %>
          <%= f.text_field :author, class: "form-control", placeholder: "Your name (optional)" %>
        </div>
        <div class="form-group">
          <%= f.submit "Suggest", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
